{
  "name": "serverless-s3-ferry",
  "version": "1.0.0",
  "description": "A Serverless Framework plugin that syncs local directories to Amazon S3 buckets using AWS SDK v3, with support for cache control, content types, bucket tagging, and offline development.",
  "keywords": [
    "serverless",
    "serverless-framework",
    "serverless-plugin",
    "s3",
    "s3-sync",
    "aws",
    "aws-sdk-v3",
    "sync",
    "upload",
    "deploy",
    "static-site",
    "spa"
  ],
  "author": "LuccaRebelloToledo <luccarebtoledo@gmail.com> (https://github.com/LuccaRebelloToledo) (based on original work by k1LoW <k1lowxb@gmail.com>)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LuccaRebelloToledo/serverless-s3-ferry"
  },
  "homepage": "https://github.com/LuccaRebelloToledo/serverless-s3-ferry#readme",
  "bugs": {
    "url": "https://github.com/LuccaRebelloToledo/serverless-s3-ferry/issues"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "check": "npx @biomejs/biome check --write ./src",
    "prepare": "husky || true"
  },
  "dependencies": {
    "@aws-sdk/client-cloudformation": "^3.990.0",
    "@aws-sdk/client-s3": "^3.990.0",
    "mime": "^4.1.0",
    "minimatch": "^10.2.0",
    "p-limit": "^3.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.15",
    "@types/node": "^25.2.3",
    "@types/serverless": "^3.12.28",
    "@vitest/coverage-v8": "^4.0.18",
    "aws-sdk-client-mock": "^4.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,md}": [
      "npm run check"
    ]
  }
}
